<!DOCTYPE html>
<html>
<head>
  <title>Syncd</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="top"></div>
<div id="mid">
	<div id="left">
		<section class="music">
			<header>
				<span>Syncd</span>
			</header>
			<ul>
				<li>
					<span>Music</span>
					<div class="num">46</div>
				</li>			
			</ul>
		</section>
		<section class="playlists">
			<header>
				<span>Playlists</span>
				<div class="options"></span>
			</header>
			<ul>
				<li class="active">
					<span>Playlist 1</span>
					<div class="num">3</div>
				</li>
				<li>
					<span>Playlist 2</span>
					<div class="num">23</div>
				</li>
				<li>
					<span>Playlist 3</span>
					<div class="num">5</div>
				</li>
		</section>
		<section class="members">
			<header>
				<span>Members</span>
				<div class="options"></span>
			</header>
			<ul>
				<li>Max</li>
				<li>Zach</li>
				<li>Sonny</li>
			</ul>
		</section>
	</div>
	<div id="right"></div>
	<div id="center">
		<div class="album"></div>
	</div>
</div>
<div id="bottom">
	<div class="now-playing">
		<div class="album"></div>
		<div class="info">
			<span class="song">Fineshrine</span>
			<span class="artist">Purity Ring</span>
		</div>
	</div>
	<div class="controls">
		<div class="buttons">
			<div class="rw"></div>
			<div class="pause"></div>
			<div class="ff"></div>
		</div>
		<div class="progress-bar">
			<span class="current">1:19</span>
			<div class="bar">
				<div class="bar-filled"></div>
			</div>
			<span class="end">3:42</span>
		</div>
		<div class="audio">
			<div class="icon"></div>
			<div class="bar">
				<div class="bar-filled"></div>
			</div>
			<div class="shuffle"></div>
			<div class="repeat"></div>
		</div>
	</div>
</div>

  <%= javascript_include_tag "retina" %>
</body>
</html>

<%= yield %>